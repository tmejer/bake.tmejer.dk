---
import BaseHead from "../components/BaseHead.astro";
import Nav from "../components/Nav.astro";

const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="da">
    <head>
        <BaseHead title={title} />
    </head>
    <body class="antialiased text-slate-900">
        <div class="container max-w-screen-lg mx-auto px-4">
            <Nav />
            <div class="container max-w-screen-xl mx-auto p-4">
                <h1 class="max-w-4xl mb-8 font-display text-5xl font-medium tracking-tight">{title}</h1>
                <div class="flex flex-wrap gap-8 md:gap-16">
                    <slot />
                </div>
            </div>
        </div>
    </body>
</html>