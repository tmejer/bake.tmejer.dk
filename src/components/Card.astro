---
export interface Props {
    heading: string;
    subheading: string;
    body: string;
    href: string;
}

const { heading, subheading, body, href} = Astro.props;
---

<li class="p-4">
    <h2 class="font-bold text-2xl mb-4">
        <a class="hover:underline hover:underline-offset-2" href={href}>{heading}</a>
    </h2>
    <p>{subheading}</p>
    <p class="mt-4">{body}</p>
    <p class="mt-4">
        <a class="hover:underline hover:underline-offset-2" href={href}>{heading} &rarr;</a>
    </p>
</li>